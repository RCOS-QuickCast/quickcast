<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/Green">

        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/quickcast"
            android:id="@+id/imageView2"
            android:scaleType="centerCrop"
            android:layout_height="10dp"
            android:layout_alignBottom="@+id/tableRadiant"
            android:layout_alignTop="@+id/tableRadiant"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:alpha="0.5"
            android:tint="#333" />

        <TextView
            android:id="@+id/tableRadiant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Radiant: "
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
<TableLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:gravity="center">
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/r_player_0_name"
            android:text="unknown"/>
        <TextView
			android:id="@+id/r_player_0_hero"
			android:text="Abadon"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/r_player_1_name"
            android:text="unknown"/>
        <TextView
			android:id="@+id/r_player_1_hero"
			android:text="Abadon"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/r_player_2_name"
            android:text="unknown"/>
        <TextView
			android:id="@+id/r_player_2_hero"
			android:text="Abadon"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/r_player_3_name"
            android:text="unknown"/>
        <TextView
			android:id="@+id/r_player_3_hero"
			android:text="Abadon"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/r_player_4_name"
            android:text="unknown"/>
        <TextView
			android:id="@+id/r_player_4_hero"
			android:text="Abadon"/>
    </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Red">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/quickcast"
            android:id="@+id/imageView3"
            android:layout_alignBottom="@+id/tableDire"
            android:layout_alignTop="@+id/tableDire"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:alpha="0.5"
            android:tint="#333" />

        <TextView
            android:id="@+id/tableDire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dire: "
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*">
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/d_player_0_name"
            android:text="unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
			android:id="@+id/d_player_0_hero"
			android:text="Abadon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/d_player_1_name"
            android:text="unknown"/>
        <TextView
			android:id="@+id/d_player_1_hero"
			android:text="Abadon"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/d_player_2_name"
            android:text="unknown"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
			android:id="@+id/d_player_2_hero"
			android:text="Abadon"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/d_player_3_name"
            android:text="unknown"/>
        <TextView
			android:id="@+id/d_player_3_hero"
			android:text="Abadon"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/d_player_4_name"
            android:text="unknown"/>
        <TextView
			android:id="@+id/d_player_4_hero"
			android:text="Abadon"/>
    </TableRow>
</TableLayout>
</LinearLayout>